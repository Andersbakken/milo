{
    "extends": "tslint:recommended",
    "rulesDirectory": [],
    "linterOptions": {
      "exclude": [
          "**/runner.ts"
      ]
    },
    "rules": {
        "max-line-length": {
            "options": [120]
        },
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": false,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": {
            "severity": "warning",
            "options": ["debug", "info", "log", "time", "timeEnd", "trace"]
        },
        "max-classes-per-file": true,
        "no-namespace": false
    },
    "jsRules": {
        "max-line-length": {
            "options": [120]
        }
    }
}

