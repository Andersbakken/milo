{
    "include": ["**/*.ts", "src/utils/assert.macro/index.js"],
    "exclude": [ "**/flycheck_*.ts" ],
    "compilerOptions": {
        "moduleResolution": "node",
        "noImplicitAny": true,
        "esModuleInterop": true,
        "allowJs": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "downlevelIteration": true,
        "strict": true,
        "target": "es6",
        "outDir": "build",
        "typeRoots": [
            "./node_modules/@types",
            "./typings"
        ],
        "rootDirs": [
            "src/nrdp",
            "src/node",
            "src/#{target}"
        ]
    }
}
