{
    "include": ["src", "examples"],
    "compilerOptions": {
        "downlevelIteration": true,
        "outDir": "./build/",
        "sourceMap": true,
        "noImplicitAny": true,
        "lib": ["es6"],
        "module": "commonjs",
        "target": "es5",
        "esModuleInterop": true,
        "allowJs": false,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "strict": true
    }
}
