{
    "include": ["src", "examples"],
    "compilerOptions": {
        "moduleResolution": "Node",
        "outDir": "./build/",
        "sourceMap": true,
        "noImplicitAny": true,
        "lib": ["es6"],
        "target": "ES5",
        "module": "ES2015",
        "esModuleInterop": true,
        "allowJs": false,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "strict": true
    }
}

