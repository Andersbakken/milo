{
    "include": ["src", "typings", "examples", "autobahn"],
    "exclude": ["**/flycheck_*"],
    "compilerOptions": {
        "moduleResolution": "node",
        "sourceMap": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "allowJs": false,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "downlevelIteration": true,
        "strict": true,
        "target": "es5",
        "baseUrl": ".",
        "rootDirs": [
            "src/nrdp",
            "src/node",
            "src/#{target}"
        ]
    }
}
