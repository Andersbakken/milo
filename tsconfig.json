{
    "include": ["src"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "lib": ["es6", "dom"],
        "module": "es6",
        "target": "es6",
        "esModuleInterop": true,
        "allowJs": true,
        "moduleResolution": "node"
    }
}

