{
    "extends": "./tsconfig.json",
    "exclude": [ "**/*flycheck_*.ts" ],
    "compilerOptions": {
        "outDir": "./build/test",
        "sourceMap": true,
        "noImplicitAny": true,
        "lib": ["es6"],
        "module": "es6",
        "target": "es6",
        "esModuleInterop": true,
        "allowJs": false,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "strict": true,
        "rootDirs": [
            "src/node",
            "src/#{target}"
        ]
    }
}
